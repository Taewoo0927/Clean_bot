{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Makefile",
            "type": "shell",
            "command": "make",
            "args": ["-f", "Makefile_dir/Makefile", "all"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean with Makefile",
            "type": "shell",
            "command": "make",
            "args": ["-f", "Makefile_dir/Makefile", "clean"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Flash with Makefile",
            "type": "shell",
            "command": "make",
            "args": ["-f", "Makefile_dir/Makefile", "flash"],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}
